  ],
  "provisioners": [
    {
      "type": "file",
      "source": "files/redditapp.service",
      "destination": "/tmp/redditapp.service"
    },
    {
      "type": "shell",
      "script": "files/startupscript.sh",
      "execute_command": "sudo {{.Path}}"
    }
